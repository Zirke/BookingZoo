<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox prefHeight="640.0" prefWidth="900.0" spacing="10.0" style="-fx-border-color: black;"
      xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="UserInterface.ArrangementBookingCreationController">
   <padding>
       <Insets bottom="10.0" left="35.0" right="35.0" top="10.0"/>
   </padding>
   <children>
       <GridPane hgap="10.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                 vgap="10.0">
         <columnConstraints>
             <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="150.0" prefWidth="169.0"/>
             <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="200.0" prefWidth="200.0"/>
             <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="139.0" prefWidth="156.0"/>
             <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="171.0" prefWidth="183.0"/>
         </columnConstraints>
         <rowConstraints>
             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
             <RowConstraints maxHeight="26.0" minHeight="0.0" prefHeight="0.0" vgrow="SOMETIMES"/>
         </rowConstraints>
         <children>
            <Label alignment="TOP_LEFT" text="Ny børnefødselsdag">
               <font>
                   <Font name="System Bold" size="16.0"/>
               </font>
               <padding>
                   <Insets left="10.0" top="10.0"/>
               </padding>
            </Label>
            <Label text="Dato:" GridPane.rowIndex="1">
               <padding>
                   <Insets left="10.0"/>
               </padding>
               <font>
                   <Font size="14.0"/>
               </font>
            </Label>
            <Label text="Tidspunkt:" GridPane.rowIndex="2">
               <padding>
                   <Insets left="10.0"/>
               </padding>
               <font>
                   <Font size="14.0"/>
               </font>
            </Label>
            <Label text="Antal børn:" GridPane.rowIndex="3">
               <padding>
                   <Insets left="10.0"/>
               </padding>
               <font>
                   <Font size="14.0"/>
               </font>
            </Label>
            <Label prefHeight="20.0" prefWidth="181.0" text="Fødselsdagsbarnets navn:" GridPane.rowIndex="4">
               <padding>
                   <Insets left="10.0"/>
               </padding>
               <font>
                   <Font size="14.0"/>
               </font>
            </Label>
            <Label text="Barnets alder:" GridPane.rowIndex="5">
               <padding>
                   <Insets left="10.0"/>
               </padding>
               <font>
                   <Font size="14.0"/>
               </font>
            </Label>
            <Label text="Kontaktperson:" GridPane.rowIndex="6">
               <padding>
                   <Insets left="10.0"/>
               </padding>
               <font>
                   <Font size="14.0"/>
               </font>
            </Label>
            <Label text="Telefonnummer:" GridPane.rowIndex="7">
               <padding>
                   <Insets left="10.0"/>
               </padding>
               <font>
                   <Font size="14.0"/>
               </font>
            </Label>
            <Label text="E-mail" GridPane.rowIndex="8">
               <padding>
                   <Insets left="10.0"/>
               </padding>
               <font>
                   <Font size="14.0"/>
               </font>
            </Label>
             <DatePicker fx:id="datePicker" minWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="13.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <children>
                  <RadioButton mnemonicParsing="false" text="10:00 - 12:00">
                     <padding>
                         <Insets top="7.0"/>
                     </padding>
                     <toggleGroup>
                         <ToggleGroup fx:id="timeGroup"/>
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton mnemonicParsing="false" text="12:30 - 14:00" toggleGroup="$timeGroup">
                     <padding>
                         <Insets left="5.0" top="7.0"/>
                     </padding>
                  </RadioButton>
               </children>
            </HBox>
             <TextField fx:id="noOfChildrenTextField" minWidth="180.0" prefWidth="180.0" GridPane.columnIndex="1"
                        GridPane.rowIndex="3"/>
             <TextField fx:id="childNameTextField" minWidth="180.0" prefWidth="180.0" GridPane.columnIndex="1"
                        GridPane.rowIndex="4"/>
             <TextField fx:id="childAgeTextField" minWidth="180.0" prefWidth="180.0" GridPane.columnIndex="1"
                        GridPane.rowIndex="5"/>
             <TextField fx:id="contactPersonTextField" minWidth="180.0" prefWidth="180.0" GridPane.columnIndex="1"
                        GridPane.rowIndex="6"/>
             <TextField fx:id="phoneNumberTextField" minWidth="180.0" prefWidth="180.0" GridPane.columnIndex="1"
                        GridPane.rowIndex="7"/>
             <TextField fx:id="emailTextField" minWidth="180.0" prefWidth="180.0" GridPane.columnIndex="1"
                        GridPane.rowIndex="8"/>
             <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="20.0" GridPane.columnIndex="3"
                   GridPane.rowIndex="1">
                 <children>
                     <RadioButton mnemonicParsing="false" text="Ja">
                         <toggleGroup>
                             <ToggleGroup fx:id="participantGroup"/>
                         </toggleGroup>
                     </RadioButton>
                     <RadioButton mnemonicParsing="false" text="Nej" toggleGroup="$participantGroup"/>
                 </children>
             </HBox>
            <Label text="Tidligere deltagelse:" GridPane.columnIndex="2" GridPane.rowIndex="1">
               <padding>
                   <Insets left="10.0"/>
               </padding>
               <font>
                   <Font size="14.0"/>
               </font>
            </Label>
            <Label text="Mad fra Skovbakken:" GridPane.columnIndex="2" GridPane.rowIndex="3">
               <padding>
                   <Insets left="10.0"/>
               </padding>
               <font>
                   <Font size="14.0"/>
               </font>
            </Label>
             <RadioButton mnemonicParsing="false" text="Kakao, boller og kage" GridPane.columnIndex="3"
                          GridPane.rowIndex="4">
               <toggleGroup>
                   <ToggleGroup fx:id="menuGroup"/>
               </toggleGroup>
            </RadioButton>
             <RadioButton mnemonicParsing="false" text="Frikadeller og dessert" toggleGroup="$menuGroup"
                          GridPane.columnIndex="3" GridPane.rowIndex="5"/>
             <RadioButton mnemonicParsing="false" text="Pasta m. kødsovs og dessert" toggleGroup="$menuGroup"
                          GridPane.columnIndex="3" GridPane.rowIndex="6"/>
             <RadioButton mnemonicParsing="false" text="Nuggets og pommes frites" toggleGroup="$menuGroup"
                          GridPane.columnIndex="3" GridPane.rowIndex="7"/>
             <RadioButton mnemonicParsing="false" selected="true" text="Ingen mad" toggleGroup="$menuGroup"
                          GridPane.columnIndex="3" GridPane.rowIndex="3"/>
         </children>
      </GridPane>
      <GridPane prefHeight="200.0" prefWidth="755.0" vgap="20.0">
         <columnConstraints>
             <ColumnConstraints hgrow="SOMETIMES" maxWidth="371.0" minWidth="10.0" prefWidth="178.0"/>
             <ColumnConstraints hgrow="SOMETIMES" maxWidth="669.0" minWidth="10.0" prefWidth="652.0"/>
         </columnConstraints>
         <rowConstraints>
             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
         </rowConstraints>
         <children>
            <Label text="Kundekommentar:">
               <padding>
                   <Insets left="10.0"/>
               </padding>
               <font>
                   <Font size="14.0"/>
               </font>
            </Label>
            <Label text="Egen kommentar:" GridPane.rowIndex="1">
               <font>
                   <Font size="14.0"/>
               </font>
               <padding>
                   <Insets left="10.0"/>
               </padding>
            </Label>
             <TextArea fx:id="customerCommentTextArea" prefHeight="125.0" prefWidth="591.0"
                       promptText="Kommentar fra kunden" GridPane.columnIndex="1"/>
             <TextArea fx:id="commentTextArea" prefHeight="125.0" prefWidth="325.0" promptText="Egen kommentar"
                       GridPane.columnIndex="1" GridPane.rowIndex="1"/>
         </children>
      </GridPane>
      <HBox alignment="BOTTOM_RIGHT" prefHeight="0.0" prefWidth="596.0" spacing="25.0">
         <children>
             <Button fx:id="createAndCloseButton" mnemonicParsing="false" onAction="#createArrangementBookingFromInput"
                     text="Opret &amp; Luk">
               <font>
                   <Font size="14.0"/>
               </font>
            </Button>
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#closeWindow" text="Annuller">
               <font>
                   <Font size="14.0"/>
               </font>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
